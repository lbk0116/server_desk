            <field name="arch" type="xml">
                <tree string="Solution Tree">
                    <field name="keyword" string = "关键字"/>
                    <field name="error_description" string="故障描述" />
                    <field name="solution" string = "解决方案"/>
                </tree>
            </field>
    </record>
        <record model="ir.ui.view" id="Cco_form_view">
